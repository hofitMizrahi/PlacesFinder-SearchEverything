<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:gravity="bottom"
    sothree:umanoPanelHeight="70dp"
    sothree:umanoShadowHeight="100dp">

    <RelativeLayout
        android:background="@drawable/effectlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <RelativeLayout
            android:background="@drawable/effectlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_layout">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/effectlayout"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:layout_toLeftOf="@+id/address_info"
                android:layout_toStartOf="@+id/address_info">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/openorclose_dot_info"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/openorclose_info"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/open_small"
                    app:siBorderColor="@color/darkgray"
                    app:siBorderWidth="6dp" />

                <TextView
                    android:id="@+id/openorclose_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/openorclose_dot_info"
                    android:layout_toRightOf="@+id/openorclose_dot_info"
                    android:gravity="center"
                    android:text=" open"
                    android:textColor="#fff"
                    android:textSize="17dp"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="sushi tel aviv"
                android:textColor="#ffff"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/address_info"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_info"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#761d1d1d"
                android:lines="2"
                android:text="street" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/info_layout"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/returm_info_IV"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                app:srcCompat="@drawable/return_arrow" />


            <ImageView
                android:id="@+id/location_info_IV"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                app:srcCompat="@drawable/gps" />


            <ImageView
                android:id="@+id/walk_info_IV"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingBottom="9dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="9dp"
                app:srcCompat="@drawable/walk_man" />


            <ImageView
                android:id="@+id/share_info_IV"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingBottom="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="15dp"
                android:paddingTop="11dp"
                app:srcCompat="@drawable/share_image" />


            <ImageView
                android:id="@+id/carImage_info"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                app:srcCompat="@drawable/car" />

        </LinearLayout>


        <com.github.siyamed.shapeimageview.RoundedImageView
            app:siRadius="10dp"
            app:siBorderWidth="0dp"
            app:siSquare="true"
            app:siBorderColor="#1c99e2"
            android:id="@+id/image_info"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>